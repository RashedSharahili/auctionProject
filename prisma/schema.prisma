generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Profile {
  id           String @id @default(uuid())
  name         String
  phone_numper String
  userId       String @unique
}

model Auction {
  id                String   @id
  auction_type      Int
  title             String
  started_date      DateTime
  end_date          DateTime
  auction_status    Boolean
  is_accepted       Boolean
  userId            String
  auction_price     Int
  auction_min_price Int
  auction_max_price Int
  is_online         Boolean
  created_at        DateTime @default(now())
}

model Auction_image {
  id        String @id
  name      String
  auctionId String
}

model Categorie {
  id   String @id
  name String
}

model User {
  id       String    @id
  email    String    @unique
  password String
  role     User_role @default(User)
}

model userAuction {
  id               String   @id
  auctionId        String
  userId           String
  auction_deposit  Int
  accepted_privacy Boolean
  auction_price    Int
  auction_date     DateTime @default(now())
}

enum User_role {
  User
  Admin
}
