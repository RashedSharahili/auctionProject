generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String @id @default(uuid())
  email    String @unique
  password String
  role     Role   @default(User)
}

model Categories {
  id   String @id @default(uuid())
  name String
}

model Profile {
  id           String @id @default(uuid())
  name         String
  phone_numper String
  userId       String @unique

  @@index([userId])
}

model Auctions {
  id                String   @id @default(uuid())
  auction_type      Int
  title             String
  started_date      DateTime
  end_date          DateTime
  auction_status    Boolean
  is_accepted       String
  userId            String
  auction_price     Int
  auction_min_price Int
  auction_max_price Int
  is_online         Boolean
  created_at        DateTime @default(now())

  @@index([userId])
}

model Auction_images {
  id        String @id @default(uuid())
  name      String
  auctionId String

  @@index([auctionId])
}

model userAuctions {
  id               String   @id @default(uuid())
  auctionId        String
  userId           String
  auction_deposit  Int
  accepted_privacy Boolean
  auction_price    Int
  auction_date     DateTime @default(now())

  @@index([userId, auctionId])
}

enum Role {
  User
  Admin
}
