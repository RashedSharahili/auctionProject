model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         User_role     @default(User)
  profile      Profile?
  auctions     Auction[]
  userAuctions userAuction[]
  userRegisterAuctions userRegisterAuction[]
}

model userRegisterAuction {
  id               String   @id @default(uuid())
  auctionId        String?
  userId           String?
  accepted_privacy String?
  auction_deposit  String?
  auctions         Auction? @relation(fields: [auctionId], references: [id])
  user             User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([auctionId])
}

model userAuction {
  id               String   @id @default(uuid())
  auctionId        String?
  userId           String?
  auction_price    String?
  auction_date     DateTime @default(now())
  auctions         Auction? @relation(fields: [auctionId], references: [id])
  user             User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([auctionId])
}

model Auction_image {
  id        String   @id @default(uuid())
  name      String
  auctionId String
  auction   Auction? @relation(fields: [auctionId], references: [id])

  @@index([auctionId])
}

enum Gender {
  Male
  Female
}

enum User_role {
  User
  Admin
}
