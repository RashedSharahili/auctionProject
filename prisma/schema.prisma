generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Profile {
  id           String  @id @default(uuid())
  name         String?
  userId       String  @unique
  gender       Gender?
  phone_number String?
  birthDate    String?
  user         User    @relation(fields: [userId], references: [id])
}

model Auction {
  id                String          @id @default(uuid())
  auction_type      String
  title             String
  started_date      String
  end_date          String
  auction_status    Boolean?
  is_accepted       Boolean         @default(false)
  userId            String
  auction_price     String
  auction_min_price String
  auction_max_price String
  is_online         Boolean?
  auctionImage      String? @db.LongText
  created_at        DateTime        @default(now())
  auctions_images   Auction_image[]
  userAuctions      userAuction[]
  userRegisterAuctions      userRegisterAuction[]
  User              User?           @relation(fields: [userId], references: [id])

  @@index([userId])
}

