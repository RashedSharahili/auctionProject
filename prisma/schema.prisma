generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Profile {
  id           String  @id @default(uuid())
  name         String?
  userId       String  @unique
  gender       Gender?
  phone_number String?
  birthDate    String?
  user         User    @relation(fields: [userId], references: [id])
}

model Auction {
  id                String          @id @default(uuid())
  auction_type      String
  title             String
  started_date      String
  end_date          String
  auction_status    Boolean
  is_accepted       Boolean         @default(false)
  userId            String
  auction_price     Int
  auction_min_price Int
  auction_max_price Int
  is_online         Boolean
  auctionImage      String?
  created_at        DateTime        @default(now())
  auctions_images   Auction_image[]
  userAuctions      userAuction[]
  User              User?           @relation(fields: [userId], references: [id])
  category          Categorie       @relation(fields: [auction_type], references: [id])

  @@index([userId])
  @@index([auction_type])
}

model Categorie {
  id       String    @id @default(uuid())
  name     String
  category Auction[]
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         User_role     @default(User)
  profile      Profile?
  auctions     Auction[]
  userAuctions userAuction[]
}

model userAuction {
  id               String   @id @default(uuid())
  auctionId        String?
  userId           String?
  auction_deposit  Int
  accepted_privacy Boolean
  auction_price    Int
  auction_date     DateTime @default(now())
  auctions         Auction? @relation(fields: [auctionId], references: [id])
  user             User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([auctionId])
}

model Auction_image {
  id        String   @id @default(uuid())
  name      String
  auctionId String
  auction   Auction? @relation(fields: [auctionId], references: [id])

  @@index([auctionId])
}

enum Gender {
  Male
  Female
}

enum User_role {
  User
  Admin
}
